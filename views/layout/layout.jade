doctype html
html
  include header
  body
    #container-fluid
      nav.navbar.navbar-default.navbar-fixed-top(role="navigation" style="margin-bottom: 0")
        include menu
      if info
        .row
          .col-md-8.col-md-offset-2
            .alert.alert-info(role="alert")= info
      if error
        .row
          .col-md-8.col-md-offset-2
            .alert.alert-warning(role="alert")= error
      .col-lg-12#content
        block content
      include footer
    script(src='/js/main.js')
    block scripts